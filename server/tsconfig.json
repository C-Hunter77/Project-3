// server/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",                // or whatever your Node version supports
    "module": "commonjs",              
    "rootDir": "src",                  // where your .ts lives
    "outDir": "dist",                  // where compiled .js will go
    "strict": true,                    
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true                  
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
